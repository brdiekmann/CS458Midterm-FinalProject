@{
    ViewData["Title"] = "Add Bidding Log";
}
@model FinalProject.Models.BiddingLogViewModel

<!-- Add Bidding Log Page Card -->
<div class="card mb-4">
    <div class="card-header">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <form method="post">
            <!-- Status Input -->
            <div class="mt-3">
                <label class="form-label">Status:</label>
                <input type="text" class="form-control" asp-for="Status" />
            </div>

            <!-- Operation Input -->
            <div class="mt-3">
                <label class="form-label">Operation:</label>
                <input type="text" class="form-control" asp-for="Operation" />
            </div>

            <!-- Timestamp Input -->
            <div class="mt-3">
                <label class="form-label">Timestamp:</label>
                <input type="datetime-local" class="form-control" asp-for="Timestamp" />
            </div>

            <!-- Note Input -->
            <div class="mt-3">
                <label class="form-label">Note:</label>
                <input type="text" class="form-control" asp-for="Note" />
            </div>

            <!-- OperatorId Input -->
            <div class="mt-3">
                <label class="form-label">OperatorId:</label>
                <input type="text" class="form-control" asp-for="OperatorId" />
            </div>

            <!-- ProjectBidId Input -->
            <div class="mt-3">
                <label class="form-label">ProjectBidId:</label>
                <input type="text" class="form-control" asp-for="ProjectBidId" />
            </div>

            <!-- Save Button -->
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

@{
    ViewData["Title"] = "Bidding Logs";
}
@model List<FinalProject.Models.Entities.BiddingLog>

<!-- Bidding Logs List Page Card -->
<div class="card mb-4">
    <div class="card-header">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <!-- Bidding Logs Table -->
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Status</th>
                    <th>Operation</th>
                    <th>Note</th>
                    <th>Timestamp</th>
                    <th>OperatorId</th>
                    <th>ProjectBidId</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var biddinglog in Model)
                {
                    <tr>
                        <td>@biddinglog.Id</td>
                        <td>@biddinglog.Status</td>
                        <td>@biddinglog.Operation</td>
                        <td>@biddinglog.Note</td>
                        <td>@biddinglog.Timestamp</td>
                        <td>@biddinglog.OperatorId</td>
                        <td>@biddinglog.ProjectBidId</td>
                        <td>
                            <a class="btn btn-primary" asp-controller="BiddingLogs" asp-action="Edit" asp-route-id="@biddinglog.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Add Bidding Log Button -->
        <div class="mt-3">
            <a class="btn btn-success" asp-controller="BiddingLogs" asp-action="Add">Add Bidding Log</a>
        </div>
    </div>
</div>

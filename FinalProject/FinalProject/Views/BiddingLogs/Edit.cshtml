@{
}
@model FinalProject.Models.Entities.BiddingLog
<h1>Edit Bidding Log:</h1>
@if (Model is null)
{
    <p>No project was found with this Id</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id:</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Status:</label>
            <input type="text" class="form-control" asp-for="Status" />
        </div>
        <div class="mt-3">
            <label class="form-label">Operation:</label>
            <input type="text" class="form-control" asp-for="Operation" />
        </div>
        <div class="mt-3">
            <label class="form-label">Note:</label>
            <input type="text" class="form-control" asp-for="Note" />
        </div>
        <div class="mt-3">
            <label class="form-label">Timestamp:</label>
            <input type="datetime-local" class="form-control" asp-for="Timestamp" />
        </div>
        <div class="mt-3">
            <label class="form-label">OperatorId:</label>
            <input type="text" class="form-control" asp-for="OperatorId" />
        </div>
        <div class="mt-3">
            <label class="form-label">ProjectBidId:</label>
            <input type="text" class="form-control" asp-for="ProjectBidId" />
        </div>

        <div>
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Projects">Delete</button>
        </div>
    </form>
}

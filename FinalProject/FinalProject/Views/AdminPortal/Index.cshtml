@{
    ViewData["Title"] = "Admin Portal";
}
@model AdminViewModel

<!-- Admin Page User Table -->
<div class="container-fluid d-flex justify-content-center">
    <div class="card mb-4" style="max-width: 1300px; width: 100%;">
        <!-- Increased width to match other pages -->
        <div class="card-header">
            <h4 class="text-light text-left" style="font-size: 1.5rem; color: #ff7e00;">Users</h4> <!-- Orange title with smaller font size -->
        </div>
        <div class="card-body">
            <!-- Success Message (if any) -->
            @{
                var successMessage = TempData["SuccessMessage"] as string;
            }
            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success">
                    @successMessage
                </div>
            }

            <!-- Users Table -->
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Bio</th>
                        <th>Email</th>
                        <th>Phone</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Users.Any())
                    {
                        @foreach (var user in Model.Users.Take(3))
                        {
                            <tr>
                                <td>@user.Name</td>
                                <td>@user.Bio</td>
                                <td>@user.Email</td>
                                <td>@user.Phone</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">No users available</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="mt-3">
                <a class="btn-modern" asp-controller="Users" asp-action="List">View Full List of Users</a>
            </div>
        </div>
    </div>
</div>

<!-- Admin Page Projects Table -->
<div class="card mb-4">
    <div class="card-header">
        <h4 class="text-light text-left" style="font-size: 1.5rem; color: #ff7e00;">Projects</h4>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Tags</th>
                    <th>Deadline</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model.Projects)
                {
                    <tr>
                        <td>@project.Title</td>
                        <td>@project.Description</td>
                        <td>@project.Tags</td>
                        <td>@project.Deadline</td>
                        <td>@project.Status</td>

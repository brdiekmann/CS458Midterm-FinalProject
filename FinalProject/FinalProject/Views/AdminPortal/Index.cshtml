@{
    ViewData["Title"] = "Admin Portal";
}
@model AdminViewModel

<!-- Admin Page User Table -->
<div class="card mb-4">
    <div class="card-header">
        <h4>Users</h4>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Bio</th>
                    <th>Email</th>
                    <th>Phone</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Users.Any())
                {
                    @foreach (var user in Model.Users.Take(3))
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.Bio</td>
                            <td>@user.Email</td>
                            <td>@user.Phone</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">No users available</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="mt-3">
            <a class="btn btn-primary" asp-controller="Users" asp-action="List">View Full List of Users</a>
        </div>
    </div>
</div>


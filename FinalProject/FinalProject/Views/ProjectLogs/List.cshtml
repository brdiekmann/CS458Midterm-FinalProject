@{
}
@model List<FinalProject.Models.Entities.ProjectLog>

<h1>ProjectLogs:</h1>
@{
    var successMessage = TempData["SuccessMessage"] as string;
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">
        @successMessage
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Status</th>
            <th>OperatorId</th>
            <th>Operation</th>
            <th>Note</th>
            <th>Timestamp</th>
            <th>ProjectId</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var projectlog in Model)
        {
            <tr>
                <td>@projectlog.Id</td>
                <td>@projectlog.Status</td>
                <td>@projectlog.OperatorId</td>
                <td>@projectlog.Operation</td>
                <td>@projectlog.Note</td>
                <td>@projectlog.Timestamp</td>
                <td>@projectlog.ProjectId</td>
                <td>
                    <a class="btn btn-primary" asp-controller="ProjectLogs" asp-action="Edit" asp-route-id="@projectlog.Id">Edit</a>
                </td>
            </tr>
        }

    </tbody>
</table>
<div class="mt-3">
    <a class="btn btn-primary" asp-controller="ProjectLogs" asp-action="Add">Add ProjectLog</a>
</div>

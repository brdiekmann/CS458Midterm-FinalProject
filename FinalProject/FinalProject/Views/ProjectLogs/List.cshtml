@{
    ViewData["Title"] = "Project Log List";
}
@model List<FinalProject.Models.Entities.ProjectLog>

<!-- Project Logs List Page Card -->
<div class="container-fluid d-flex justify-content-center">
    <div class="card mb-4" style="max-width: 1300px; width: 100%;">
        <!-- Increased width to match other pages -->
        <!-- Constrain card width -->
        <div class="card-header">
            <h4 class="text-light text-left" style="font-size: 1.5rem;">@ViewData["Title"]</h4> <!-- Orange title with smaller font size -->
        </div>
        <div class="card-body">
            <!-- Success Message (if any) -->
            @{
                var successMessage = TempData["SuccessMessage"] as string;
            }

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success">
                    @successMessage
                </div>
            }

            <!-- Project Logs Table -->
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Status</th>
                        <th>OperatorId</th>
                        <th>Operation</th>
                        <th>Note</th>
                        <th>Timestamp</th>
                        <th>ProjectId</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var projectlog in Model)
                    {
                        <tr>
                            <td>@projectlog.Id</td>
                            <td>@projectlog.Status</td>
                            <td>@projectlog.OperatorId</td>
                            <td>@projectlog.Operation</td>
                            <td>@projectlog.Note</td>
                            <td>@projectlog.Timestamp</td>
                            <td>@projectlog.ProjectId</td>
                            <td>
                                <a class="btn btn-modern" asp-controller="ProjectLogs" asp-action="Edit" asp-route-id="@projectlog.Id">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Add Project Log Button -->
            <div class="mt-3">
                <a class="btn-modern" asp-controller="ProjectLogs" asp-action="Add">Add Project Log</a>
            </div>
        </div>
    </div>
</div>

<!-- Add Styles -->
<head>
    <style>
        /* Common body styling */
        body {
            background-image: url('/background.gif');
            background-repeat: repeat;
            background-size: cover;
            background-position: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow: auto;
        }

        /* Card Styling */
        .card {
            background-color: rgba(0, 0, 0, 0.7); /* Transparent black background for cards */
            color: #f4f4f9;
            border-radius: 10px;
        }

        /* Title Styling */
        .card-header h4 {
            text-align: left;
            font-size: 1.5rem; /* Smaller font size for title */
            color: #ff7e00; /* Orange color for title */
        }

        /* Table Styling */
        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(0, 0, 0, 0.1); /* Slight dark background for odd rows */
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.15); /* Hover effect for rows */
        }

        /* Button Styling for Orange and Black Theme */
        .btn-modern {
            padding: 10px 20px;
            background-color: #ff7e00; /* Orange for Add button */
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1.1rem;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .btn-modern:hover {
                background-color: #e56b00; /* Darker Orange */
                text-decoration: none;
            }

        /* Card Spacing and Layout */
        .card-body {
            padding: 20px;
        }

            .card-body hr {
                border: 1px solid rgba(255, 255, 255, 0.3); /* Light separator */
            }

        /* Footer Styles */
        .footer {
            position: relative;
            bottom: 0;
            width: 100%;
            white-space: nowrap;
            line-height: 60px;
            text-align: center;
            padding-top: 20px;
        }

            .footer a {
                color: #ff7e00;
            }

                .footer a:hover {
                    color: #e56b00; /* Hover effect for footer links */
                }
    </style>
</head>

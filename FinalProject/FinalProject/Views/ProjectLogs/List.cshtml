@{
    ViewData["Title"] = "Project Logs";
}
@model List<FinalProject.Models.Entities.ProjectLog>

<!-- Project Logs List Page Card -->
<div class="card mb-4">
    <div class="card-header">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <!-- Success Message (if any) -->
        @{
            var successMessage = TempData["SuccessMessage"] as string;
        }

        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="alert alert-success">
                @successMessage
            </div>
        }

        <!-- Project Logs Table -->
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Status</th>
                    <th>OperatorId</th>
                    <th>Operation</th>
                    <th>Note</th>
                    <th>Timestamp</th>
                    <th>ProjectId</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var projectlog in Model)
                {
                    <tr>
                        <td>@projectlog.Id</td>
                        <td>@projectlog.Status</td>
                        <td>@projectlog.OperatorId</td>
                        <td>@projectlog.Operation</td>
                        <td>@projectlog.Note</td>
                        <td>@projectlog.Timestamp</td>
                        <td>@projectlog.ProjectId</td>
                        <td>
                            <a class="btn btn-primary" asp-controller="ProjectLogs" asp-action="Edit" asp-route-id="@projectlog.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Add Project Log Button -->
        <div class="mt-3">
            <a class="btn btn-success" asp-controller="ProjectLogs" asp-action="Add">Add Project Log</a>
        </div>
    </div>
</div>

@{
}
@model FinalProject.Models.Entities.ProjectLog
<h1>Edit Project Log</h1>
@if (Model is null)
{
    <p>No project was found with this Id</p>
}
else
{
    <form method="post">

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }
        <div class="mt-3">
            <label class="form-label">Id:</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Status:</label>
            <input type="text" class="form-control" asp-for="Status" />
        </div>
        <div class="mt-3">
            <label class="form-label">User ID:</label>
            <input type="text" class="form-control" asp-for="OperatorId" />
        </div>
        <div class="mt-3">
            <label class="form-label">Tags:</label>
            <input type="text" class="form-control" asp-for="Operation" />
        </div>
        <div class="mt-3">
            <label class="form-label">Note:</label>
            <input type="text" class="form-control" asp-for="Note" />
        </div>
        <div class="mt-3">
            <label class="form-label">Timestamp:</label>
            <input type="datetime-local" class="form-control" asp-for="Timestamp" />
        </div>
        <div class="mt-3">
            <label class="form-label">Project ID:</label>
            <input type="text" class="form-control" asp-for="ProjectId" />
        </div>

        <div>
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="ProjectLogs">Delete</button>
        </div>
    </form>
}

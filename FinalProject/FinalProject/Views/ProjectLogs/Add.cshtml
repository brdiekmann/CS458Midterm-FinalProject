@{
}
@model FinalProject.Models.ProjectLogViewModel
<form method="post">
    <h1>Add Project Log</h1>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }
    
    <div class="mt-3">
        <label class="form-label">Status:</label>
        <input type="text" class="form-control" asp-for="Status" />
    </div>
    <div class="mt-3">
        <label class="form-label">User Id:</label>
        <input type="text" class="form-control" asp-for="OperatorId" />
    </div>
    <div class="mt-3">
        <label class="form-label">Operation:</label>
        <input type="text" class="form-control" asp-for="Operation" />
    </div>
    <div class="mt-3">
        <label class="form-label">Note:</label>
        <input type="text" class="form-control" asp-for="Note" />
    </div>
    <div class="mt-3">
        <label class="form-label">Timestamp:</label>
        <input type="datetime-local" class="form-control" asp-for="Timestamp" />
    </div>
    <div class="mt-3">
        <label class="form-label">Project ID:</label>
        <input type="text" class="form-control" asp-for="ProjectId" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
@using FinalProject.Models.Entities
@model FinalProject.Models.Entities.ProjectBid

<!-- Project Details Page Card -->
<div class="card mb-4">
    <div class="card-header">
        <h4>Bid Details</h4>
    </div>
    <div class="card-body">
        <!-- Title -->
        <div class="mt-3">
            <h3>Project:</h3>
            <p>@Model.project.Title</p>
            <hr />
        </div>


        <!-- Description -->
        <div class="mt-3">
            <h3>Description:</h3>
            <p>@Model.project.Description</p>
            <hr />
        </div>

        <!-- Deadline -->
        <div class="mt-3">
            <h3>Time placed:</h3>
            <p>@Model.SubmittedTime.ToString("yyyy-MM-dd HH:mm")</p> <!-- Formatting the DateTime -->
            <hr />
        </div>

        <!-- Technology -->
        <div class="mt-3">
            <h3>Bidder Name:</h3>
            <p>@Model.bidder</p>
            <hr />
        </div>

        <!-- Funding -->
        <div class="mt-3">
            <h3>Bid Value:</h3>
            <p>$@Model.BidValue</p>
            <hr />
        </div>

    </div>
</div>

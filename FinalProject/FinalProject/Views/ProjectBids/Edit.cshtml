@{
    ViewData["Title"] = "Edit Project Bid";
}
@model FinalProject.Models.Entities.ProjectBid

<!-- Edit Project Bid Page Card -->
<div class="container-fluid d-flex justify-content-center">
    <div class="card mb-4" style="max-width: 1000px; width: 100%;">
        <!-- Card Header with Title -->
        <div class="card-header">
            <h4 class="text-center" style="font-size: 1.5rem; color: #ff7e00;">@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            @if (Model is null)
            {
                <p>No project bid was found with this Id</p>
            }
            else
            {
                <form method="post">
                    <!-- ID Input -->
                    <div class="mt-3">
                        <label class="form-label">ID:</label>
                        <input type="text" class="form-control" asp-for="Id" readonly />
                    </div>

                    <!-- Project ID Input -->
                    <div class="mt-3">
                        <label class="form-label">Project ID:</label>
                        <input type="text" class="form-control" asp-for="ProjectId" />
                    </div>

                    <!-- Bidder ID Input -->
                    <div class="mt-3">
                        <label class="form-label">Bidder ID:</label>
                        <input type="text" class="form-control" asp-for="BidderId" />
                    </div>

                    <!-- Submitted Time Input -->
                    <div class="mt-3">
                        <label class="form-label">Submitted Time:</label>
                        <input type="datetime-local" class="form-control" asp-for="SubmittedTime" />
                    </div>

                    <!-- Save and Delete Buttons -->
                    <div class="mt-3 d-flex justify-content-center">
                        <button type="submit" class="btn-modern">Save</button> <!-- Using the modern button style -->
                        <button type="submit" class="btn btn-dark ms-3" asp-action="Delete" asp-controller="ProjectBids">Delete</button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>

<!-- Add Styles -->
<head>
    <style>
        /* Common body styling */
        body {
            background-image: url('/background.gif');
            background-repeat: repeat;
            background-size: cover;
            background-position: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow: auto;
        }

        /* Card Styling */
        .card {
            background-color: rgba(0, 0, 0, 0.7); /* Transparent black background for cards */
            color: #f4f4f9;
            border-radius: 10px;
        }

        /* Title Styling */
        .card-header h4 {
            text-align: center;
            font-size: 1.5rem;
            color: #ff7e00; /* Orange color for title */
        }

        /* Button Styling for Orange and Black Theme */
        .btn-modern {
            padding: 10px 20px;
            background-color: #ff7e00; /* Orange for buttons */
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1.1rem;
            font-weight: bold;
            transition: background-color 0.3s ease;
            margin-right: 10px; /* Adjusted margin */
        }

            .btn-modern:hover {
                background-color: #e56b00; /* Darker Orange */
                text-decoration: none;
            }

        .btn-dark {
            padding: 10px 20px;
            background-color: #000000; /* Black for Delete button */
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1.1rem;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .btn-dark:hover {
                background-color: #444444; /* Darker Black on hover */
                text-decoration: none;
            }

        /* Card Spacing and Layout */
        .card-body {
            padding: 20px;
        }

            .card-body hr {
                border: 1px solid rgba(255, 255, 255, 0.3); /* Light separator */
            }

        /* Form Styling */
        .form-label {
            font-weight: bold;
        }

        /* Input Styling */
        input.form-control:focus {
            border-color: #ff7e00;
            box-shadow: 0 0 0 0.2rem rgba(255, 126, 0, 0.25);
        }

        /* Center the Submit Button */
        .mt-3.text-center {
            margin-top: 20px;
        }

        /* Adjust Button Positioning */
        .d-flex {
            justify-content: flex-start; /* Buttons side-by-side with space between */
        }
    </style>
</head>

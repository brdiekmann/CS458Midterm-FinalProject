@{
}
@model FinalProject.Models.Entities.ProjectBid
<h1>Edit Project Bid</h1>
@if (Model is null)
{
    <p>No project bid was found with this Id</p>
}
else
{
    <form method="post">
    <div class="mt-3">
        <label class="form-label">ID:</label>
        <input type="text" class="form-control" asp-for="Id" />
    </div>
    <div class="mt-3">
        <label class="form-label">Project ID:</label>
        <input type="text" class="form-control" asp-for="ProjectId" />
    </div>
    <div class="mt-3">
        <label class="form-label">Bidder ID:</label>
        <input type="text" class="form-control" asp-for="BidderId" />
    </div>
    <div class="mt-3">
    <label class="form-label">Status:</label>
    <input type="text" class="form-control" asp-for="Status" />
    </div>
    <div class="mt-3">
        <label class="form-label">Note:</label>
        <input type="text" class="form-control" asp-for="Note" />
    </div>
    <div class="mt-3">
        <label class="form-label">Proposal:</label>
        <input type="text" class="form-control" asp-for="Proposal" />
    </div>
    <div class="mt-3">
        <label class="form-label">Timeline:</label>
        <input type="text" class="form-control" asp-for="Timeline" />
    </div>
    <div class="mt-3">
        <label class="form-label">Submitted Time:</label>
        <input type="datetime-local" class="form-control" asp-for="SubmittedTime" />
    </div>
    <div>
    <button type="submit" class="btn btn-primary">Save</button>

        <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="ProjectBids">Delete</button>
    </div>
</form>
}



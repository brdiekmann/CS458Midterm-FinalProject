@{
    ViewData["Title"] = "Edit Project Bid";
}
@model FinalProject.Models.Entities.ProjectBid

<!-- Edit Project Bid Page Card -->
<div class="card mb-4">
    <div class="card-header">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        @if (Model is null)
        {
            <p>No project bid was found with this Id</p>
        }
        else
        {
            <form method="post">
                <!-- ID Input -->
                <div class="mt-3">
                    <label class="form-label">ID:</label>
                    <input type="text" class="form-control" asp-for="Id" readonly />
                </div>

                <!-- Project ID Input -->
                <div class="mt-3">
                    <label class="form-label">Project ID:</label>
                    <input type="text" class="form-control" asp-for="ProjectId" />
                </div>

                <!-- Bidder ID Input -->
                <div class="mt-3">
                    <label class="form-label">Bidder ID:</label>
                    <input type="text" class="form-control" asp-for="BidderId" />
                </div>

                <!-- Submitted Time Input -->
                <div class="mt-3">
                    <label class="form-label">Submitted Time:</label>
                    <input type="datetime-local" class="form-control" asp-for="SubmittedTime" />
                </div>

                <!-- Save Button -->
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>

                <!-- Delete Button -->
                <div class="mt-3">
                    <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="ProjectBids">Delete</button>
                </div>
            </form>
        }
    </div>
</div>

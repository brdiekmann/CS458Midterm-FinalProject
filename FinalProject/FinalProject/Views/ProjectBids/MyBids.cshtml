@model List<FinalProject.Models.Entities.ProjectBid>

<!-- Success Message Alert (if any) -->
@{
    var successMessage = TempData["SuccessMessage"] as string;
    ViewData["Title"] = "My Bids";
}
@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">
        @successMessage
    </div>
}

<div class="card mb-4">
    <div class="card-header">
        <h4>My Bids</h4>
    </div>
    <div class="card-body">

        <!-- Table of Projects -->
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Project</th>
                    <th>Bidder</th>
                    <th>Bid</th>
                    <th>Submitted Time</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var projectBid in Model)
                {
                    <tr>
                        <td>@projectBid.Id</td>
                        <td>@(projectBid.project.Title)</td>
                        <td>@(projectBid.bidder.Name)</td>
                        <td>@projectBid.BidValue</td>
                        <td>@projectBid.SubmittedTime</td>
                        <td>
                            <a class="btn btn-primary" asp-controller="ProjectBids" asp-action="Edit" asp-route-id="@projectBid.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

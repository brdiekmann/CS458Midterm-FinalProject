@{
    ViewData["Title"] = "Project Bids";
}
@model List<FinalProject.Models.Entities.ProjectBid>

<!-- Project Bids Page Card -->
<div class="container-fluid d-flex justify-content-center">
    <div class="card mb-4" style="max-width: 1300px; width: 100%;">
        <!-- Card Header with Title -->
        <div class="card-header">
            <h4 class="text-light" style="font-size: 1.5rem; color: #ff7e00; text-align: left;">@ViewData["Title"]</h4> <!-- Orange title, left aligned -->
        </div>
        <div class="card-body">

            <!-- Project Bids Table -->
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Project</th>
                        <th>Bidder</th>
                        <th>Bid</th>
                        <th>Submitted Time</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var projectBid in Model)
                    {
                        <tr>
                            <td>@projectBid.Id</td>
                            <td>@(projectBid.project != null ? projectBid.project.Title : "Unknown")</td>
                            <td>@(projectBid.bidder != null ? projectBid.bidder.Name : "Unknown")</td>
                            <td>@projectBid.BidValue</td>
                            <td>@projectBid.SubmittedTime</td>
                            <td>
                                <a class="btn-modern" asp-controller="ProjectBids" asp-action="BidView" asp-route-id="@projectBid.Id">View More</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

<!-- Add Styles -->
<head>
    <style>
        /* Apply Global Dark Theme with Transparent Black Backgrounds */
        body {
            background-image: url('/background.gif');
            background-repeat: repeat;
            background-size: cover;
            background-position: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #f4f4f9;
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow: auto;
        }

        .card {
            background-color: rgba(0, 0, 0, 0.7); /* Transparent black background for cards */
            color: #f4f4f9;
            border-radius: 10px;
        }

        /* Title Styling */
        .card-header h4 {
            text-align: left;
            font-size: 1.5rem; /* Orange title, left aligned */
            color: #ff7e00; /* Orange color for title */
        }

        /* Table Styling */
        .table th, .table td {
            text-align: left;
            padding: 12px;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(0, 0, 0, 0.1); /* Slight dark background for odd rows */
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.15); /* Hover effect for rows */
        }

        /* Button Styling for Orange and Black Theme */
        .btn-modern {
            padding: 10px 20px;
            background-color: #ff7e00; /* Orange for buttons */
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1.1rem;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .btn-modern:hover {
                background-color: #e56b00; /* Darker Orange on hover */
                text-decoration: none;
            }

        /* Card Spacing and Layout */
        .card-body {
            padding: 20px;
        }

        /* Footer Styles */
        .footer {
            position: relative;
            bottom: 0;
            width: 100%;
            white-space: nowrap;
            line-height: 60px;
            text-align: center;
            padding-top: 20px;
        }

            .footer a {
                color: #ff7e00;
            }

                .footer a:hover {
                    color: #e56b00; /* Hover effect for footer links */
                }
    </style>
</head>

@{
}
@model FinalProject.Models.ProjectBidsViewModel
<form method="post">
    <h1>Add Project Bid</h1>
    <div class="mt-3">
        <label class="form-label">Project ID:</label>
        <input type="text" class="form-control" asp-for="ProjectId" />
    </div>
    <div class="mt-3">
        <label class="form-label">Bidder ID:</label>
        <input type="text" class="form-control" asp-for="BidderId" />
    </div>
    <div class="mt-3">
        <label class="form-label">Submitted Time:</label>
        <input type="datetime-local" class="form-control" asp-for="SubmittedTime" />
    </div>
    <div>
        <label class="form-label">Bid:</label>
        <input type="text" class="form-control" asp-for="BidValue"/>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

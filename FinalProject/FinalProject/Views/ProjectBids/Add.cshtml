@{
    ViewData["Title"] = "Add Project Bid";
}
@model FinalProject.Models.ProjectBidsViewModel

<partial name="_ValidationScriptsPartial" />

<div asp-validation-summary="All" class="text-danger"></div>

<!-- Add Project Bid Page Card -->
<div class="container-fluid d-flex justify-content-center">
    <div class="card mb-4" style="max-width: 1000px; width: 100%;">
        <!-- Ensuring card width consistency -->
        <!-- Card Header with Title -->
        <div class="card-header">
            <h4 class="text-center" style="font-size: 1.5rem; color: #ff7e00;">@ViewData["Title"]</h4> <!-- Orange title -->
        </div>
        <div class="card-body">
            <form method="post">
                <!-- Display validation errors -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <ul>
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }

                <!-- Project Dropdown -->
                <div class="mt-3">
                    <label class="form-label">Project:</label>
                    <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.Projects">
                        <option value="">-- Select Project --</option>
                    </select>
                    <span asp-validation-for="ProjectId" class="text-danger"></span>
                </div>

                <!-- Bidder Dropdown -->
                <div class="mt-3">
                    <label class="form-label">Bidder:</label>
                    <select asp-for="BidderId" class="form-control" asp-items="ViewBag.Bidders">
                        <option value="">-- Select Bidder --</option>
                    </select>
                    <span asp-validation-for="BidderId" class="text-danger"></span>
                </div>

                <!-- Submitted Time Input -->
                <div class="mt-3">
                    <label class="form-label">Submitted Time:</label>
                    <input type="datetime-local" class="form-control" asp-for="SubmittedTime" />
                    <span asp-validation-for="SubmittedTime" class="text-danger"></span>
                </div>

                <!-- Bid Value Input -->
                <div class="mt-3">
                    <label class="form-label">Bid:</label>
                    <input type="text" class="form-control" asp-for="BidValue" />
                    <span asp-validation-for="BidValue" class="text-danger"></span>
                </div>

                <!-- Save Button -->
                <div class="mt-3 text-center">
                    <button type="submit" class="btn-modern">Save</button> <!-- Using the modern button style -->
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Add Styles -->
<head>
    <style>
        /* Common body styling */
        body {
            background-image: url('/background.gif');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow: auto;
        }

        /* Card Styling */
        .card {
            background-color: rgba(0, 0, 0, 0.7); /* Transparent black background for cards */
            color: #f4f4f9;
            border-radius: 10px;
        }

        /* Title Styling */
        .card-header h4 {
            text-align: center;
            font-size: 1.5rem; /* Smaller font size for title */
            color: #ff7e00; /* Orange color for title */
        }

        /* Button Styling for Orange and Black Theme */
        .btn-modern {
            padding: 10px 20px;
            background-color: #ff7e00; /* Orange for buttons */
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1.1rem;
            font-weight: bold;
            transition: background-color 0.3s ease;
            display: inline-block;
            margin: 0 auto; /* Center the button */
        }

            .btn-modern:hover {
                background-color: #e56b00; /* Darker Orange */
                text-decoration: none;
            }

        /* Card Spacing and Layout */
        .card-body {
            padding: 20px;
        }

            .card-body hr {
                border: 1px solid rgba(255, 255, 255, 0.3); /* Light separator */
            }

        /* Form Styling */
        .form-label {
            font-weight: bold;
        }

        /* Input Styling */
        input.form-control:focus {
            border-color: #ff7e00;
            box-shadow: 0 0 0 0.2rem rgba(255, 126, 0, 0.25);
        }

        /* Center the Submit Button */
        .mt-3.text-center {
            margin-top: 20px;
        }
    </style>
</head>

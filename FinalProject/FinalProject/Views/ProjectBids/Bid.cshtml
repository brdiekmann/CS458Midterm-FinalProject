@model FinalProject.Models.ProjectBidsViewModel

<!-- Bid Page Card -->
<div class="container-fluid d-flex justify-content-center">
    <div class="card mb-4" style="max-width: 1000px; width: 100%;">
        <!-- Ensure card width consistency -->
        <!-- Card Header with Title -->
        <div class="card-header">
            <h4 class="text-light" style="font-size: 1.5rem; color: #ff7e00;">Place Your Bid</h4> <!-- Orange title -->
        </div>
        <div class="card-body">
            @if (Model is null)
            {
                <p>No project bid was found with this Id</p>
            }
            else
            {
                <form method="post">
                    <!-- Project Title -->
                    <div class="mt-3">
                        <h1 class="text-light">@Model.project.Title</h1> <!-- Orange title -->
                        <hr />
                    </div>

                    <!-- Project Description -->
                    <div>
                        <h3 class="text-light">Project Description:</h3>
                        <h5 class="text-light">@Model.project.Description</h5>
                    </div>

                    <!-- Hidden Inputs for BidderId and ProjectId -->
                    <div>
                        <input type="hidden" asp-for="BidderId" />
                        <input type="hidden" asp-for="ProjectId" />
                    </div>

                    <!-- Bid Input -->
                    <div class="mt-3">
                        <label class="form-label">Bid:</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="text" class="form-control" asp-for="BidValue" />
                        </div>
                    </div>

                    <!-- Place Bid Button -->
                    <div class="mt-3 text-center">
                        <button type="submit" class="btn-modern">Place Bid</button> <!-- Using the modern button style -->
                    </div>
                </form>
            }
        </div>
    </div>
</div>

<!-- Add Styles -->
<head>
    <style>
        /* Common body styling */
        body {
            background-image: url('/background.gif');
            background-repeat: repeat;
            background-size: cover;
            background-position: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow: auto;
        }

        /* Card Styling */
        .card {
            background-color: rgba(0, 0, 0, 0.7); /* Transparent black background for cards */
            color: #f4f4f9;
            border-radius: 10px;
        }

        /* Title Styling */
        .card-header h4 {
            text-align: center;
            font-size: 1.5rem; /* Smaller font size for title */
            color: #ff7e00; /* Orange color for title */
        }

        /* Button Styling for Orange and Black Theme */
        .btn-modern {
            padding: 10px 20px;
            background-color: #ff7e00; /* Orange for buttons */
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1.1rem;
            font-weight: bold;
            transition: background-color 0.3s ease;
            display: inline-block;
            margin: 0 auto; /* Center the button */
        }

            .btn-modern:hover {
                background-color: #e56b00; /* Darker Orange */
                text-decoration: none;
            }

        /* Card Spacing and Layout */
        .card-body {
            padding: 20px;
        }

            .card-body hr {
                border: 1px solid rgba(255, 255, 255, 0.3); /* Light separator */
            }

        /* Form Styling */
        .form-label {
            font-weight: bold;
        }

        /* Input Styling */
        input.form-control:focus {
            border-color: #ff7e00;
            box-shadow: 0 0 0 0.2rem rgba(255, 126, 0, 0.25);
        }

        /* Center the Submit Button */
        .mt-3.text-center {
            margin-top: 20px;
        }
    </style>
</head>

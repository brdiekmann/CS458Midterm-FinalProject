
@model FinalProject.Models.ProjectBidsViewModel
@if (Model is null)
{
    <p>No project bid was found with this Id</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <h1>@Model.project.Title</h1>
            <hr />
        </div>
        <div>
            <h3>Project Description:</h3>
            <h5>@Model.project.Description</h5>
        </div>
        <div>
            <input type="hidden" asp-for="BidderId" />
            <input type="hidden" asp-for="ProjectId" />
        </div>
        <div class="mt-3">
            <label class="form-label">Bid:</label>
            <div class="input-group">
            <span class="input-group-text">$</span>
            <input type="text" class="form-control" asp-for="BidValue" />
            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Place Bid</button>
        </div>
    </form>
}


@{
    ViewData["Title"] = "Project Bids";
}
@model List<FinalProject.Models.Entities.ProjectBid>

<!-- Project Bids Page Card -->
<div class="container-fluid d-flex justify-content-center">
    <div class="card mb-4" style="max-width: 1300px; width: 100%;">
        <!-- Card Header with Title -->
        <div class="card-header">
            <h4 class="text-light" style="font-size: 1.5rem; color: #ff7e00; text-align: left;">@ViewData["Title"]</h4> <!-- Orange title, left aligned -->
        </div>
        <div class="card-body">
            <!-- Project Bids Table -->
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Project</th>
                        <th>Bidder</th>
                        <th>Bidder ID</th>
                        <th>Bid</th>
                        <th>Submitted Time</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var projectBid in Model)
                    {
                        <tr>
                            <td>@projectBid.Id</td>
                            <td>@(projectBid.project != null ? projectBid.project.Title : "Unknown")</td>
                            <td>@(projectBid.bidder != null ? projectBid.bidder.Name : "Unknown")</td>
                            <td>@projectBid.BidderId</td>
                            <td>@projectBid.BidValue</td>
                            <td>@projectBid.SubmittedTime</td>
                            <td>
                                <a class="btn btn-modern" asp-controller="ProjectBids" asp-action="Edit" asp-route-id="@projectBid.Id">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Add Project Bid Button -->
            <div class="mt-3 text-left">
                <a class="btn-modern" asp-controller="ProjectBids" asp-action="Add">Add Project Bid</a>
            </div>
        </div>
    </div>
</div>
<style>
body {
    background-image: url('/background.gif');
    background-repeat: repeat;
    background-size: cover;
    background-position: center;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: #f4f4f9;
    margin: 0;
    padding: 0;
    height: 100vh;
    overflow: auto;
}

/* Card Styling */
.card {
    background-color: rgba(0, 0, 0, 0.7); /* Transparent black background for cards */
    color: #f4f4f9;
    border-radius: 10px;
}

/* Title Styling */
.card-header h4 {
    text-align: left;
    font-size: 1.5rem; /* Orange title, left aligned */
    color: #ff7e00; /* Orange color for title */
}

/* Table Styling */
.table th, .table td {
    text-align: left;
    padding: 12px;
}

.table-striped tbody tr:nth-of-type(odd) {
    background-color: rgba(0, 0, 0, 0.1); /* Slight dark background for odd rows */
}

.table-hover tbody tr:hover {
    background-color: rgba(0, 0, 0, 0.15); /* Hover effect for rows */
}

/* Button Styling for Orange and Black Theme */
.btn-modern {
    padding: 10px 20px;
    background-color: #ff7e00; /* Orange for buttons */
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 1.1rem;
    font-weight: bold;
    transition: background-color 0.3s ease;
    display: inline-block;
    margin: 0 0px; /* Space between buttons */
}

.btn-modern:hover {
    background-color: #e56b00; /* Darker Orange on hover */
    text-decoration: none;
}

/* Add spacing for buttons */
.mt-3 {
    margin-top: 20px;
}

/* Table Styling */
.table th, .table td {
    text-align: left;
    padding: 12px;
}

.table-striped tbody tr:nth-of-type(odd) {
    background-color: rgba(0, 0, 0, 0.1); /* Slight dark background for odd rows */
}

.table-hover tbody tr:hover {
    background-color: rgba(0, 0, 0, 0.15); /* Hover effect for rows */
}

.text-center {
    text-align: center;
}
</style>
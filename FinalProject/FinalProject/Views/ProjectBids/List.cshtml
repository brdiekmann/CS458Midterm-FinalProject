@{
}

@model List<FinalProject.Models.Entities.ProjectBid>

<h1>Project Bids:</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Project</th>
            <th>Bidder</th>
            <th>Bidder ID</th>
            <th>Bid</th>
            <th>Submitted Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var projectBid in Model)
        {
            <tr>
                <td>@projectBid.Id</td>
                <td>@(projectBid.project != null ? projectBid.project.Title : "Unknown")</td> <!-- Safely display the project's title -->
				<td>@(projectBid.bidder != null ? projectBid.bidder.Name : "Unknown")</td> <!-- Safely display the bidder's name -->
                <td>@projectBid.BidderId</td>
                <td>@projectBid.BidValue</td>
                <td>@projectBid.SubmittedTime</td>
                
                <td>
                    <a class="btn btn-primary" asp-controller="ProjectBids" asp-action="Edit" asp-route-id="@projectBid.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="mt-3">
    <a class="btn btn-primary" asp-controller="ProjectBids" asp-action="Add">Add Project Bid</a>
</div>


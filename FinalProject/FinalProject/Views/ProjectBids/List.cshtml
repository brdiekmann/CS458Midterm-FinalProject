@{
    ViewData["Title"] = "Project Bids";
}
@model List<FinalProject.Models.Entities.ProjectBid>

<!-- Project Bids Page Card -->
<div class="card mb-4">
    <div class="card-header">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <!-- Project Bids Table -->
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Project</th>
                    <th>Bidder</th>
                    <th>Bidder ID</th>
                    <th>Bid</th>
                    <th>Submitted Time</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var projectBid in Model)
                {
                    <tr>
                        <td>@projectBid.Id</td>
                        <td>@(projectBid.project != null ? projectBid.project.Title : "Unknown")</td>
                        <td>@(projectBid.bidder != null ? projectBid.bidder.Name : "Unknown")</td> 
                        <td>@projectBid.BidderId</td>
                        <td>@projectBid.BidValue</td>
                        <td>@projectBid.SubmittedTime</td>
                        <td>
                            <a class="btn btn-primary" asp-controller="ProjectBids" asp-action="Edit" asp-route-id="@projectBid.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Add Project Bid Button -->
        <div class="mt-3">
            <a class="btn btn-success" asp-controller="ProjectBids" asp-action="Add">Add Project Bid</a>
        </div>
    </div>
</div>

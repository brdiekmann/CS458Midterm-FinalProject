@model List<FinalProject.Models.Entities.Project>

<!-- Success Message Alert (if any) -->
@{
    var successMessage = TempData["SuccessMessage"] as string;
}
@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">
        @successMessage
    </div>
}

<!-- Projects Table Section -->
<!-- Add Project Button -->
<div class="mt-3">
    <a class="btn btn-success" asp-controller="Projects" asp-action="AddNew">Create</a>
    <hr />
</div>
<div class="card mb-4">
    <div class="card-header">
        <h4>Projects List</h4>
    </div>
    <div class="card-body">

        <!-- Table of Projects -->
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Tags</th>
                    <th>Deadline</th>
                    <th>Technology</th>
                    <th>Status</th>
                    <th>Funding</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model)
                {
                    <tr>
                        <td>@project.Title</td>
                        <td>@project.Description</td>
                        <td>@project.Tags</td>
                        <td>@project.Deadline</td>
                        <td>@project.Technology</td>
                        <td>@project.Status</td>
                        <td>$@project.Funding</td>
                        <td>
                            <!-- Edit Button -->
                            <a class="btn btn-primary" asp-controller="Projects" asp-action="EditMyProject" asp-route-id="@project.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

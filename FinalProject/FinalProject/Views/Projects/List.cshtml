@{
    ViewData["Title"] = "Projects";
}
@model List<FinalProject.Models.Entities.Project>

<!-- Success Message Alert (if any) -->
@{
    var successMessage = TempData["SuccessMessage"] as string;
}
@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">
        @successMessage
    </div>
}

<!-- Projects Table Section -->
<div class="card mb-4">
    <div class="card-header">
        <h4>Projects List</h4>
    </div>
    <div class="card-body">

        <!-- Table of Projects -->
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Tags</th>
                    <th>Deadline</th>
                    <th>Technology</th>
                    <th>Status</th>
                    <th>Funding</th>
                    <th>Submitter ID</th>
                    <th>Submitter</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model)
                {
                    <tr>
                        <td>@project.Id</td>
                        <td>@project.Title</td>
                        <td>@project.Description</td>
                        <td>@project.Tags</td>
                        <td>@project.Deadline</td>
                        <td>@project.Technology</td>
                        <td>@project.Status</td>
                        <td>@project.Funding</td>
                        <td>@project.SubmitterId</td>
                        <td>@(project.Submitter != null ? project.Submitter.Name : "Unknown")</td> <!-- Safely display the submitter's name -->
                        <td>
                            <!-- Edit Button -->
                            <a class="btn btn-primary" asp-controller="Projects" asp-action="Edit" asp-route-id="@project.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Add Project Button -->
        <div class="mt-3">
            <a class="btn btn-success" asp-controller="Projects" asp-action="Add">Add New Project</a>
        </div>
    </div>
</div>

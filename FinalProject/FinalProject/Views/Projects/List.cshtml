@{
    ViewData["Title"] = "";
}
@model List<FinalProject.Models.Entities.Project>

<!-- Success Message Alert (if any) -->
@{
    var successMessage = TempData["SuccessMessage"] as string;
}
@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">
        @successMessage
    </div>
}

<!-- Projects Table Section -->
<div class="card mb-4">
    <div class="card-header">
        <h4 class="text-light">Projects List</h4>
    </div>
    <div class="card-body">

        <!-- Table of Projects -->
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Tags</th>
                    <th>Deadline</th>
                    <th>Technology</th>
                    <th>Status</th>
                    <th>Funding</th>
                    <th>Submitter ID</th>
                    <th>Submitter</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model)
                {
                    <tr>
                        <td>@project.Id</td>
                        <td>@project.Title</td>
                        <td>@project.Description</td>
                        <td>@project.Tags</td>
                        <td>@project.Deadline</td>
                        <td>@project.Technology</td>
                        <td>@project.Status</td>
                        <td>$@project.Funding</td>
                        <td>@project.SubmitterId</td>
                        <td>@(project.Submitter != null ? project.Submitter.Name : "Unknown")</td> <!-- Safely display the submitter's name -->
                        <td>
                            <!-- Edit Button -->
                            <a class="btn-modern" asp-controller="Projects" asp-action="Edit" asp-route-id="@project.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Add Project Button -->
        <div class="mt-3">
            <a class="btn-modern-left" asp-controller="Projects" asp-action="Add">Add New Project</a>
        </div>
    </div>
</div>

<!-- Add Styles -->
<head>
    <style>
        /* Common body styling */
        body {
            background-image: url('/background.gif');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #f4f4f9;
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow: auto;
        }

        /* Card Styling */
        .card {
            background-color: rgba(0, 0, 0, 0.7); /* Transparent black background for cards */
            color: #f4f4f9;
            border-radius: 10px;
        }

        /* Table Styling */
        .table th, .table td {
            text-align: left;
            padding: 12px;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(0, 0, 0, 0.1); /* Slight dark background for odd rows */
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.15); /* Hover effect for rows */
        }

        .form-label {
            font-weight: bold;
        }

        /* Button Styling for Orange and Black Theme */
        .btn-modern {
            padding: 10px 20px;
            background-color: #ff7e00; /* Orange for Add and Edit buttons */
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1.1rem;
            font-weight: bold;
            transition: background-color 0.3s ease;
            display: inline-block;
            margin: 10px auto; /* Center button */
        }

            .btn-modern:hover {
                background-color: #e56b00; /* Darker Orange */
                text-decoration: none;
            }

        /* Left-aligned Button (for Add New Project) */
        .btn-modern-left {
            padding: 10px 20px;
            background-color: #ff7e00; /* Orange */
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1.1rem;
            font-weight: bold;
            transition: background-color 0.3s ease;
            display: inline-block;
            margin-left: 0; /* Align left */
        }

            .btn-modern-left:hover {
                background-color: #e56b00; /* Darker Orange on hover */
                text-decoration: none;
            }

        /* Input Focus Styling */
        input.form-control:focus {
            border-color: #ff7e00;
            box-shadow: 0 0 0 0.2rem rgba(255, 126, 0, 0.25);
        }

        .form-label {
            text-align: left;
            display: block;
            font-size: 1rem;
            font-weight: 500;
        }
    </style>
</head>

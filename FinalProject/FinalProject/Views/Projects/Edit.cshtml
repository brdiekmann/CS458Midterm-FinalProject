@{
}
@model FinalProject.Models.Entities.Project
<h1>Edit Project</h1>
@if (Model is null)
{
    <p>No project was found with this Id</p>
}
else
{
    <form method="post">
    <div class="mt-3">
        <label class="form-label">Id:</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>
    <div class="mt-3">
        <label class="form-label">Title:</label>
        <input type="text" class="form-control" asp-for="Title" />
    </div>
    <div class="mt-3">
        <label class="form-label">Description:</label>
        <input type="text" class="form-control" asp-for="Description" />
    </div>
    <div class="mt-3">
        <label class="form-label">Tags:</label>
        <input type="text" class="form-control" asp-for="Tags" />
    </div>
    <div class="mt-3">
        <label class="form-label">Deadline:</label>
        <input type="datetime-local" class="form-control" asp-for="Deadline" />
    </div>
    <div class="mt-3">
        <label class="form-label">Technology:</label>
        <input type="text" class="form-control" asp-for="Technology" />
    </div>
    <div class="mt-3">
        <label class="form-label">Status:</label>
        <input type="text" class="form-control" asp-for="Status" />
    </div>
    <div class="mt-3">
        <label class="form-label">Funding:</label>
        <input type="text" class="form-control" asp-for="Funding" />
    </div>
    <div class="mt-3">
        <label class="form-label">Submitter ID:</label>
        <input type="text" class="form-control" asp-for="SubmitterId" />
    </div>
    <div class="mt-3">
        <label class="form-label">Submitter:</label>
        <input type="text" class="form-control" asp-for="submitter" />
    </div>
    <div>
    <button type="submit" class="btn btn-primary">Save</button>

        <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Projects">Delete</button>
    </div>
</form>
}

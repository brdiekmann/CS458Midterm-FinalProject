@using FinalProject.Models.Entities
@model FinalProject.Models.Entities.Project

<!-- Project Details Page Card -->
<div class="card mb-4">
    <div class="card-header">
        <h4>Project Details</h4>
    </div>
    <div class="card-body">
        <!-- Title -->
        <div class="mt-3">
            <h3>Title:</h3>
            <p>@Model.Title</p>
            <hr />
        </div>

        <!-- Description -->
        <div class="mt-3">
            <h3>Description:</h3>
            <p>@Model.Description</p>
            <hr />
        </div>

        <!-- Tags -->
        <div class="mt-3">
            <h3>Tags:</h3>
            <p>@Model.Tags</p>
            <hr />
        </div>

        <!-- Deadline -->
        <div class="mt-3">
            <h3>Deadline:</h3>
            <p>@Model.Deadline.ToString("yyyy-MM-dd HH:mm")</p> <!-- Formatting the DateTime -->
            <hr />
        </div>

        <!-- Technology -->
        <div class="mt-3">
            <h3>Technology:</h3>
            <p>@Model.Technology</p>
            <hr />
        </div>

        <!-- Status -->
        <div class="mt-3">
            <h3>Status:</h3>
            <p>@Model.Status</p>
            <hr />
        </div>

        <!-- Funding -->
        <div class="mt-3">
            <h3>Funding:</h3>
            <p>$@Model.Funding</p>
            <hr />
        </div>

        <!-- Submitter -->
        <div class="mt-3">
            <h3>Submitter:</h3>
            <p>@Model.Submitter.Name</p>
            <hr />
        </div>

        <!-- Bid Button -->
        <div>
            <a class="btn btn-primary" asp-controller="ProjectBids" asp-action="Bid" asp-route-id="@Model.Id">Bid</a>
        </div>
    </div>
</div>

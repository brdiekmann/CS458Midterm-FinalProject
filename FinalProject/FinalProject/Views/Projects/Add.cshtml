@using FinalProject.Models.Entities
@model FinalProject.Models.ProjectViewModel

<!-- Add Project Page -->
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - ArchProject Manager</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        /* Common body styling */
        body {
            background-image: url('/background.gif');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        /* Header Styling */
        .header {
            text-align: center;
            margin-top: 50px;
            color: white;
        }

            .header h1 {
                font-size: 3.5rem;
                font-weight: 700;
            }

            .header hr {
                border: 1px solid rgba(255, 255, 255, 0.3);
                width: 50%;
                margin: 20px auto;
            }

        /* Section Styling */
        .section {
            background-color: rgba(0, 0, 0, 0.5);
            margin: 20px auto;
            padding: 20px;
            border-radius: 10px;
            width: 80%;
            max-width: 800px;
            text-align: center;
        }

            .section h3 {
                font-size: 2rem;
                color: #ff7e00; /* Modern accent color */
                margin-bottom: 15px;
            }

            .section p {
                font-size: 1.1rem;
                margin-bottom: 20px;
            }

        /* Button Styling */
        .btn-modern {
            padding: 10px 20px;
            background-color: #ff7e00; /* Accent Color */
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1.1rem;
            font-weight: bold;
            transition: background-color 0.3s ease;
            display: block;
            margin: 0 auto; /* Center button */
        }

            .btn-modern:hover {
                background-color: #e56b00;
                text-decoration: none;
            }

        /* Input Focus Styling */
        input.form-control:focus {
            border-color: #ff7e00;
            box-shadow: 0 0 0 0.2rem rgba(255, 126, 0, 0.25);
        }

        .form-label {
            text-align: left;
            display: block;
            font-size: 1rem;
            font-weight: 500;
        }

    </style>
</head>
<body>
    <div class="header">
        <h1>@ViewData["Title"]</h1>
        <hr />
    </div>

    <div class="section">
        <h3>Add New Project</h3>
        <form method="post">

            <!-- Validation Errors (if any) -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <!-- Title Field -->
            <div class="mt-3">
                <label class="form-label">Title:</label>
                <input type="text" class="form-control" asp-for="Project.Title" />
            </div>

            <!-- Description Field -->
            <div class="mt-3">
                <label class="form-label">Description:</label>
                <input type="text" class="form-control" asp-for="Project.Description" />
            </div>

            <!-- Tags Field -->
            <div class="mt-3">
                <label class="form-label">Tags:</label>
                <input type="text" class="form-control" asp-for="Project.Tags" />
            </div>

            <!-- Deadline Field -->
            <div class="mt-3">
                <label class="form-label">Deadline:</label>
                <input type="datetime-local" class="form-control" asp-for="Project.Deadline" value="@DateTime.Today.AddDays(7).ToString("yyyy-MM-ddTHH:mm")" />
            </div>

            <!-- Technology Dropdown -->
            <div class="mt-3">
                <label class="form-label">Technology:</label>
                <select asp-for="Project.Technology" class="form-control">
                    <option value="">Select Technology</option>
                    <option value="Web Development">Web Development</option>
                    <option value="Mobile Development">Mobile Development</option>
                    <option value="Data Science">Data Science</option>
                    <option value="AI/ML">AI/ML</option>
                    <option value="Cloud Computing">Cloud Computing</option>
                </select>
                <span asp-validation-for="Project.Technology" class="text-danger"></span>
            </div>

            <!-- Status Dropdown -->
            <div class="mt-3">
                <label class="form-label">Status:</label>
                <select asp-for="Project.Status" class="form-control">
                    <option value="">Select Status</option>
                    <option value="Pending">Pending</option>
                    <option value="Approved">Approved</option>
                    <option value="Rejected">Rejected</option>
                </select>
                <span asp-validation-for="Project.Status" class="text-danger"></span>
            </div>

            <!-- Funding Field -->
            <div class="mt-3">
                <label class="form-label">Funding:</label>
                <input type="text" class="form-control" asp-for="Project.Funding" />
            </div>

            <!-- Submitter Dropdown -->
            <div class="mt-3">
                <label class="form-label">Submitter Id:</label>
                <select asp-for="Project.SubmitterId" class="form-control">
                    <option value="">Select Submitter</option>
                    @foreach (var user in Model.Users)
                    {
                        <option value="@user.Id">@user.Name</option>
                    }
                </select>
                <span asp-validation-for="Project.SubmitterId" class="text-danger"></span>
            </div>

            <!-- Save Button -->
            <div class="mt-3">
                <button type="submit" class="btn-modern">Save</button>
            </div>
        </form>
    </div>
</body>

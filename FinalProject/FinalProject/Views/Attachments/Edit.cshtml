@{
}
@model FinalProject.Models.Entities.Attachment
<h1>Edit Attachment</h1>
@if (Model is null)
{
    <p>No project was found with this Id</p>
}
else
{
    <form method="post">
    <div class="mt-3">
        <label class="form-label">Id:</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>
    <div class="mt-3">
            <label class="form-label">Type:</label>
            <input type="text" class="form-control" asp-for="Type" />
    </div>
    <div class="mt-3">
            <label class="form-label">Name:</label>
            <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="mt-3">
            <label class="form-label">Location:</label>
            <input type="text" class="form-control" asp-for="Location" />
    </div>
    <div class="mt-3">
            <label class="form-label">LastModifiedTimestamp:</label>
            <input type="datetime-local" class="form-control" asp-for="LastModifiedTimestamp" />
    </div>
    <div class="mt-3">
            <label class="form-label">ProjectId:</label>
            <input type="text" class="form-control" asp-for="ProjectId" />
    </div>
    <div>
    <button type="submit" class="btn btn-primary">Save</button>

        <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Attachments">Delete</button>
    </div>
</form>
}
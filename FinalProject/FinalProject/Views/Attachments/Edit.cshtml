@{
    ViewData["Title"] = "Edit Attachment";
}
@model FinalProject.Models.Entities.Attachment

<!-- Edit Attachment Page Card -->
<div class="card mb-4">
    <div class="card-header">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        @if (Model is null)
        {
            <p>No attachment was found with this Id</p>
        }
        else
        {
            <form method="post">
                <div class="mt-3">
                    <label class="form-label">Id:</label>
                    <input type="text" class="form-control" asp-for="Id" readonly />
                </div>
                <div class="mt-3">
                    <label class="form-label">Type:</label>
                    <input type="text" class="form-control" asp-for="Type" />
                </div>
                <div class="mt-3">
                    <label class="form-label">Name:</label>
                    <input type="text" class="form-control" asp-for="Name" />
                </div>
                <div class="mt-3">
                    <label class="form-label">Location:</label>
                    <input type="text" class="form-control" asp-for="Location" />
                </div>
                <div class="mt-3">
                    <label class="form-label">LastModifiedTimestamp:</label>
                    <input type="datetime-local" class="form-control" asp-for="LastModifiedTimestamp" />
                </div>
                <div class="mt-3">
                    <label class="form-label">ProjectId:</label>
                    <input type="text" class="form-control" asp-for="ProjectId" />
                </div>

                <!-- Action Buttons -->
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Attachments">Delete</button>
                </div>
            </form>
        }
    </div>
</div>

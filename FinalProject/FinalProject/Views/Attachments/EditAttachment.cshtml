@{
    ViewData["Title"] = "Edit Attachment";
}
@model FinalProject.Models.Entities.Attachment
@using FinalProject.Models.Entities
<div class="card mb-4">
    <div class="card-header">
        <h4>Edit Attachment</h4>
    </div>
    <div class="card-body">

        <!-- Validation Errors (if any) -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <!-- Edit Project Form -->
        <form method="post">
            <!--Id Field-->
            <div class="mt-3">
                <input type="hidden" class="form-control" asp-for="Id" />
            </div>

            <!-- Name Field -->
            <div class="mt-3">
                <label class="form-label">Name:</label>
                <input type="text" class="form-control" asp-for="Name" />
            </div>

            <!-- Type Field -->
            <div class="mt-3">
                <label class="form-label">Type:</label>
                <select asp-for="Type" class="form-control">
                    <option value="Select Attachment Type">Select Attachment Type</option>
                    <option value="Test">Test</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <!-- Location Field -->
            <div class="mt-3">
                <label class="form-label">Location:</label>
                <input type="text" class="form-control" asp-for="Location" />
            </div>

            <!-- LastModifiedTimestamp Field -->
            <div class="mt-3">
                <input type="hidden" asp-for="LastModifiedTimestamp" />
            </div>

            <!-- Project ID Hidden Field -->
            <div class="mt-3">
                <input type="hidden" asp-for="ProjectId" />
            </div>
            <!--Project-->
            <div>
                <input type="hidden" asp-for="project" />
            </div>
            <!-- Save and Delete Buttons -->
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Attachments">Delete</button>
            </div>
        </form>
    </div>
</div>


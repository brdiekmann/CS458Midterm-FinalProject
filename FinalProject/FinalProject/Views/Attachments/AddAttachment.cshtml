@using FinalProject.Models.Entities
@model FinalProject.Models.AttachmentViewModel

<!-- Add Attachment Page Card -->
<div class="container-fluid d-flex justify-content-center">
    <div class="card mb-4" style="max-width: 800px; width: 100%;">
        <!-- Ensure card width is constrained -->
        <div class="card-header">
            <h4 class="text-orange">Add Attachment</h4> <!-- Orange title -->
        </div>
        <div class="card-body">
            <!-- Validation Errors -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <!-- Add Attachment Form -->
            <form method="post">
                <!-- Name Field -->
                <div class="mt-3">
                    <label class="form-label">Name:</label>
                    <input type="text" class="form-control" asp-for="Attachment.Name" />
                </div>

                <!-- Type Field -->
                <div class="mt-3">
                    <label class="form-label">Type:</label>
                    <select asp-for="Attachment.Type" class="form-control">
                        <option value="Select Attachment Type">Select Attachment Type</option>
                        <option value="Text">Text</option>
                        <option value="Image">Image</option>
                        <option value="Excel File">Excel File</option>
                    </select>
                    <span asp-validation-for="Attachment.Type" class="text-danger"></span>
                </div>

                <!-- Location Field -->
                <div class="mt-3">
                    <label class="form-label">Location:</label>
                    <input type="text" class="form-control" asp-for="Attachment.Location" />
                </div>

                <!-- LastModifiedTimestamp Field -->
                <div class="mt-3">
                    <input type="hidden" asp-for="Attachment.LastModifiedTimestamp" />
                </div>

                <!-- Project ID Hidden Field -->
                <div class="mt-3">
                    <input type="hidden" asp-for="Attachment.ProjectId" />
                </div>
                <!-- Project -->
                <div>
                    <input type="hidden" asp-for="Attachment.project" />
                </div>

                <!-- Save Button (Centered) -->
                <div class="mt-3 text-center">
                    <button type="submit" class="btn-modern">Save</button> <!-- Using modern button style -->
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Add Styles -->
<head>
    <style>
        /* Common body styling */
        body {
            background-image: url('/background.gif');
            background-repeat: repeat;
            background-size: cover;
            background-position: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #f4f4f9;
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow: auto;
        }

        /* Card Styling */
        .card {
            background-color: rgba(0, 0, 0, 0.7); /* Transparent black background for cards */
            color: #f4f4f9;
            border-radius: 10px;
        }

        /* Title Styling */
        .card-header h4 {
            text-align: center;
            font-size: 2.5rem;
            color: #ff7e00; /* Orange color for title */
        }

        /* Button Styling for Orange and Black Theme */
        .btn-modern {
            padding: 10px 20px;
            background-color: #ff7e00; /* Orange for Save button */
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1.1rem;
            font-weight: bold;
            transition: background-color 0.3s ease;
            display: inline-block;
            margin: 10px auto; /* Center the button */
        }

            .btn-modern:hover {
                background-color: #e56b00; /* Darker Orange on hover */
                text-decoration: none;
            }

        /* Form Styling */
        .form-label {
            font-weight: bold;
        }

        input.form-control:focus {
            border-color: #ff7e00;
            box-shadow: 0 0 0 0.2rem rgba(255, 126, 0, 0.25);
        }

        /* Card Spacing and Layout */
        .card-body {
            padding: 20px;
        }

        /* Table Styling */
        .table th, .table td {
            text-align: left;
            padding: 12px;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(0, 0, 0, 0.1); /* Slight dark background for odd rows */
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.15); /* Hover effect for rows */
        }
    </style>
</head>

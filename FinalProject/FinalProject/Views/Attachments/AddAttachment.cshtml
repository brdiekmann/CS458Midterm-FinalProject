@using FinalProject.Models.Entities
@model FinalProject.Models.AttachmentViewModel

<!-- Add Project Page Card -->
<div class="card mb-4">
    <div class="card-header">
        <h4>Add Attachment</h4>
    </div>
    <div class="card-body">
        <!-- Validation Errors -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form method="post">
            

            <!-- Name Field -->
            <div class="mt-3">
                <label class="form-label">Name:</label>
                <input type="text" class="form-control" asp-for="Attachment.Name" />
            </div>

            <!-- Type Field -->
            <div class="mt-3">
                <label class="form-label">Type:</label>
                <select asp-for="Attachment.Type" class="form-control">
                    <option value="Select Attachment Type">Select Attachment Type</option>
                    <option value="Test">Test</option>
                </select>
                <span asp-validation-for="Attachment.Type" class="text-danger"></span>
            </div>

            <!-- Location Field -->
            <div class="mt-3">
                <label class="form-label">Location:</label>
                <input type="text" class="form-control" asp-for="Attachment.Location" />
            </div>

            <!-- LastModifiedTimestamp Field -->
            <div class="mt-3">
                <input type="hidden" asp-for="Attachment.LastModifiedTimestamp" />
            </div>

            <!-- Project ID Hidden Field -->
            <div class="mt-3">
                <input type="hidden" asp-for="Attachment.ProjectId" />
            </div>
            <!--Project-->
            <div>
                <input type="hidden" asp-for="Attachment.project" />
            </div>
           

            <!-- Save Button -->
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

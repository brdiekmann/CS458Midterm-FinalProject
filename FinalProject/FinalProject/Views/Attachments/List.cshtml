@{
    ViewData["Title"] = "Attachments";
}
@model List<FinalProject.Models.Entities.Attachment>

<!-- Attachments Page Card -->
<div class="card mb-4">
    <div class="card-header">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <!-- Attachments Table -->
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Type</th>
                    <th>Name</th>
                    <th>Location</th>
                    <th>LastModifiedTimestamp</th>
                    <th>ProjectId</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var attachment in Model)
                {
                    <tr>
                        <td>@attachment.Id</td>
                        <td>@attachment.Type</td>
                        <td>@attachment.Name</td>
                        <td>@attachment.Location</td>
                        <td>@attachment.LastModifiedTimestamp</td>
                        <td>@attachment.ProjectId</td>
                        <td>
                            <a class="btn btn-primary" asp-controller="Attachments" asp-action="Edit" asp-route-id="@attachment.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="mt-3">
            <a class="btn btn-success" asp-controller="Attachments" asp-action="Add">Add Attachment</a>
        </div>
    </div>
</div>

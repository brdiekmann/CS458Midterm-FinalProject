@using FinalProject.Models
@using FinalProject.Models.Entities
@model AttachmentViewModel


<!-- Success Message Alert (if any) -->
@{
    var successMessage = TempData["SuccessMessage"] as string;
}


@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">
        @successMessage
    </div>
}

<!-- Attachments Table Section -->
<!-- Add Attachment Button -->
<div class="mt-3">
    
        <a class="btn btn-success" asp-controller="Attachments" asp-action="AddAttachment" asp-route-id="@Model.Attachment.ProjectId">Add Attachment</a>
    
    <hr />
</div>
<div class="card mb-4">
    <div class="card-header">
        <h4>Project Attachments</h4>
    </div>
    <div class="card-body">

        <!-- Table of Projects -->
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Name</th>
                    <th>Location</th>
                    <th>LastModifiedTimestamp</th>
                    <th>Technology</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var attachment in Model.AttachmentList)
                {
                    <tr>
                        <td>@attachment.Type</td>
                        <td>@attachment.Name</td>
                        <td>@attachment.Location</td>
                        <td>@attachment.LastModifiedTimestamp</td>
                        <td>@attachment.ProjectId</td>
                        <td>
                            <!-- Edit Button -->
                            <a class="btn btn-primary" asp-controller="Attachments" asp-action="EditMyAttachment" asp-route-id="@attachment.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

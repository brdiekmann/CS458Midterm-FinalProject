@{
    ViewData["Title"] = "";
}

<!-- Privacy Policy Page -->
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - ArchProject Manager</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        /* Common body styling */
        body {
            background-image: url('/background.gif');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        /* Header Styling */
        .header {
            text-align: center;
            margin-top: 50px;
            color: white;
        }

            .header h1 {
                font-size: 3.5rem;
                font-weight: 700;
            }

            .header hr {
                border: 1px solid rgba(255, 255, 255, 0.3);
                width: 50%;
                margin: 20px auto;
            }

        /* Section Styling */
        .section {
            background-color: rgba(0, 0, 0, 0.5);
            margin: 20px auto;
            padding: 20px;
            border-radius: 10px;
            width: 80%;
            max-width: 800px;
            text-align: center;
        }

            .section h3 {
                font-size: 2rem;
                color: #ff7e00; /* Modern accent color */
                margin-bottom: 15px;
            }

            .section p {
                font-size: 1.1rem;
                margin-bottom: 20px;
            }

        /* Button Styling */
        .btn-modern {
            padding: 10px 20px;
            background-color: #ff7e00; /* Accent Color */
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1.1rem;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .btn-modern:hover {
                background-color: #e56b00;
                text-decoration: none;
            }

        p {color: white;}
        /* Input Focus Styling */
        input.form-control:focus {
            border-color: #ff7e00;
            box-shadow: 0 0 0 0.2rem rgba(255, 126, 0, 0.25);
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>@ViewData["Title"]</h1>
        <hr />
    </div>

    <div class="section">
        <h3>Privacy Policy</h3>
        <p>This page outlines the privacy policy of our website and how we handle your data.</p>
    </div>

    <div class="section">
        <h3>Return to Home</h3>
        <p>If you'd like to go back to the home page, click the button below:</p>
        <a class="btn-modern" href="/">Back to Home</a>
    </div>

    <div class="text-muted text-center mt-4">
        <p>Last updated: <strong>May 2025</strong></p>
    </div>
</body>

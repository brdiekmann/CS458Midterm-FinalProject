@{
    ViewData["Title"] = "Home Page";
}
@model HomeViewModel

<!--Home Page-->
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - ArchProject Manager</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        body {
            background-image: url('/background.gif');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
        }

        input.form-control:focus {
            border-color: orangered;
            box-shadow: 0 0 0 0.2rem rgba(255, 69, 0, 0.25);
        }
    </style>
</head>
<body>
    <div>
<div>
   <div class="text-white mb-3 fs-1 fw-bold">
    <h1>Arch Project Manager</h1>
    <hr />
   </div>

<div>
    <h3>Projects</h3>
    <p>Create new projects, view other creator's projects, and bid on projects that interest you.</p>
    <p>View the Project Menu below to see more!</p>
    <div>
        <a class="btn btn-primary" asp-controller="Projects" asp-action="ProjectMenu">Project Menu</a>
    </div>
    <hr />
</div>

    <div>
        <h3>Bids</h3>
        <p>View your outgoing bids</p>
        <div>
            <a class="btn btn-primary" asp-controller="ProjectBids" asp-action="BidMenu">Bid Menu</a>
        </div>
        <hr />
    </div>
        </div>
</body>

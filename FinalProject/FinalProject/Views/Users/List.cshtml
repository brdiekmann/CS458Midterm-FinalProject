@{
    ViewData["Title"] = "Users";
}
@model List<FinalProject.Models.Entities.User>

<!-- Success Message Alert (if any) -->
@{
    var successMessage = TempData["SuccessMessage"] as string;
}
@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">
        @successMessage
    </div>
}

<!-- Users Table Section -->
<div class="card mb-4">
    <div class="card-header">
        <h4 class="text-light">Users List</h4>
    </div>
    <div class="card-body">
        <!-- Table of Users -->
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Full Name</th>
                    <th>Bio</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.Name</td>
                        <td>@user.Bio</td>
                        <td>@user.Email</td>
                        <td>@user.Phone</td>
                        <td>
                            <!-- Action Buttons (Edit) -->
                            <a class="btn-modern" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Add User Button -->
        <div class="mt-3">
            <a class="btn-modern" asp-controller="Users" asp-action="Add">Add New User</a>
        </div>
    </div>
</div>

<!-- Add Styles -->
<head>
    <style>
        /* Apply Global Dark Theme with Transparent Black Backgrounds */
        body {
            background-image: url('/background.gif');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #f4f4f9;
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow: auto;
        }

        .card, .section {
            background-color: rgba(0, 0, 0, 0.7); /* Transparent black background for cards and sections */
            color: #f4f4f9;
            border-radius: 10px;
        }

        /* Button Styling for Orange and Black Theme */
        .btn-modern {
            padding: 10px 20px;
            background-color: #ff7e00; /* Orange for Add and Edit buttons */
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1.1rem;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .btn-modern:hover {
                background-color: #e56b00; /* Darker Orange */
                text-decoration: none;
            }

        /* Table Styling */
        .table th, .table td {
            text-align: left;
            padding: 12px;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(0, 0, 0, 0.1); /* Slight dark background for odd rows */
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.15); /* Hover effect for rows */
        }

        /* Footer Styles */
        .footer {
            position: relative;
            bottom: 0;
            width: 100%;
            white-space: nowrap;
            line-height: 60px;
            text-align: center;
            padding-top: 20px;
            color: #f4f4f9;
        }

            .footer a {
                color: #ff7e00;
            }

                .footer a:hover {
                    color: #e56b00; /* Hover effect for footer links */
                }

        /* Navbar Styling */
        .navbar-nav .nav-link {
            color: #f4f4f9; /* Light color for the links */
            padding: 8px 16px; /* Space around the text */
            transition: color 0.3s ease, background-color 0.3s ease; /* Smooth transition for color and background */
        }

            .navbar-nav .nav-link:hover,
            .navbar-nav .nav-link:focus {
                color: #ff7e00; /* Orange color on hover */
                background-color: rgba(0, 0, 0, 0.2); /* Dark background with transparency on hover */
            }

        /* Dropdown Menu Styling */
        .navbar-nav .nav-item.dropdown .dropdown-menu {
            background-color: #333; /* Dark background for the dropdown */
            border: none;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
        }

        .navbar-nav .nav-item.dropdown .dropdown-item {
            color: #f4f4f9; /* Light text color for dropdown items */
            padding: 10px 20px;
        }

            .navbar-nav .nav-item.dropdown .dropdown-item:hover {
                background-color: #ff7e00; /* Orange hover effect for dropdown items */
                color: white;
            }

    </style>
</head>

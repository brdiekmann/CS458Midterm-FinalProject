@{
}
@model List<FinalProject.Models.Entities.User>

<h1>Users:</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Bio</th>
            <th>Email</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Bio</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                </td>
            </tr>
        }
        
    </tbody>
</table>
<div class="mt-3">
    <a class="btn btn-primary" asp-controller="Users" asp-action="Add">Add User</a>
</div>

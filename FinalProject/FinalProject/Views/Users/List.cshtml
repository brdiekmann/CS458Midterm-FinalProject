@{
    ViewData["Title"] = "Users";
}
@model List<FinalProject.Models.Entities.User>

<!-- Success Message Alert (if any) -->
@{
    var successMessage = TempData["SuccessMessage"] as string;
}
@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">
        @successMessage
    </div>
}

<!-- Users Table Section -->
<div class="card mb-4">
    <div class="card-header">
        <h4>Users List</h4>
    </div>
    <div class="card-body">
        <!-- Table of Users -->
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Bio</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Bio</td>
                        <td>@user.Email</td>
                        <td>@user.Phone</td>
                        <td>
                            <!-- Action Buttons (Edit) -->
                            <a class="btn btn-primary" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Add User Button -->
        <div class="mt-3">
            <a class="btn btn-success" asp-controller="Users" asp-action="Add">Add New User</a>
        </div>
    </div>
</div>

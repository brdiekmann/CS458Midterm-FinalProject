@{
}
@model FinalProject.Models.UserViewModel
<form method="post">
<h1>Add Student</h1>

<div class="mt-3">
    <label class="form-label">Name:</label>
    <input type = "text" class="form-control" asp-for="Name"/>
</div>

<div class="mt-3">
    <label for="avatar">Profile Picture:</label>

    <input type="file" id="avatar" name="avatar" accept="image/png, image/jpeg" asp-for="ProfilePicture"/>
</div>

<div class="mt-3">
    <label class="form-label">Bio:</label>
    <input type="text" class="form-control" asp-for="Bio"/>
</div>
<div class="mt-3">
    <label class="form-label">Email:</label>
    <input type="email" class="form-control" asp-for="Email"/>
</div>
<div class="mt-3">
    <label class="form-label">Phone:</label>
    <input type="text" class="form-control" asp-for="Phone"/>
</div>
<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</form>
@{
    ViewData["Title"] = "Edit User";
}
@model FinalProject.Models.Entities.User

<!-- Edit User Page -->
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - ArchProject Manager</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        /* Common body styling */
        body {
            background-image: url('/background.gif');
            background-repeat: repeat;
            background-size: cover;
            background-position: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        /* Header Styling */
        .header {
            text-align: center;
            margin-top: 50px;
            color: white;
        }

            .header h1 {
                font-size: 3.5rem;
                font-weight: 700;
            }

            .header hr {
                border: 1px solid rgba(255, 255, 255, 0.3);
                width: 50%;
                margin: 20px auto;
            }

        /* Section Styling */
        .section {
            background-color: rgba(0, 0, 0, 0.5);
            margin: 20px auto;
            padding: 20px;
            border-radius: 10px;
            width: 80%;
            max-width: 800px;
            text-align: center;
        }

            .section h3 {
                font-size: 2rem;
                color: #ff7e00; /* Modern accent color */
                margin-bottom: 15px;
            }

            .section p {
                font-size: 1.1rem;
                margin-bottom: 20px;
            }

        /* Button Styling */
        .btn-modern {
            padding: 10px 20px;
            background-color: #ff7e00; /* Orange for Save button */
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1.1rem;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .btn-modern:hover {
                background-color: #e56b00; /* Darker Orange */
                text-decoration: none;
            }

        /* Delete Button Styling */
        .btn-danger {
            padding: 10px 20px;
            background-color: #000000; /* Black for Delete button */
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1.1rem;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .btn-danger:hover {
                background-color: #444444; /* Darker Black for hover */
                text-decoration: none;
            }

        /* Input Focus Styling */
        input.form-control:focus {
            border-color: #ff7e00;
            box-shadow: 0 0 0 0.2rem rgba(255, 126, 0, 0.25);
        }

        /* Align labels to the left */
        .form-label {
            text-align: left;
            display: block;
            font-size: 1rem;
            font-weight: 500;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>@ViewData["Title"]</h1>
        <hr />
    </div>

    <div class="section">
        @if (Model == null)
        {
            <p>No user was found with this Id</p>
        }
        else
        {
            <!-- Form for Editing User -->
            <form method="post">

                <!-- Validation Errors (if any) -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <ul>
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }

                <!-- Id Field (Readonly) -->
                <div class="mt-3">
                    <label class="form-label">Id:</label>
                    <input type="text" class="form-control" asp-for="Id" readonly />
                </div>

                <!-- Username Field -->
                <div class="mt-3">
                    <label class="form-label">Username:</label>
                    <input type="text" class="form-control" asp-for="UserName" />
                </div>

                <!-- Name Field -->
                <div class="mt-3">
                    <label class="form-label">Full Name:</label>
                    <input type="text" class="form-control" asp-for="Name" />
                </div>

                <!-- Profile Picture (File Input) -->
                <div class="mt-3">
                    <label for="avatar" class="form-label">Profile Picture:</label>
                    <input type="file" id="avatar" name="avatar" accept="image/png, image/jpeg" onchange="convertToBase64()" class="form-control" />
                    <input type="hidden" id="ProfilePicture" name="ProfilePicture" />
                    <script>
                        function convertToBase64() {
                            var file = document.getElementById("avatar").files[0];
                            var reader = new FileReader();
                            reader.onloadend = function () {
                                document.getElementById("ProfilePicture").value = reader.result;
                            };
                            if (file) {
                                reader.readAsDataURL(file);
                            }
                        }
                    </script>
                </div>

                <!-- Bio Field -->
                <div class="mt-3">
                    <label class="form-label">Bio:</label>
                    <input type="text" class="form-control" asp-for="Bio" />
                </div>

                <!-- Email Field -->
                <div class="mt-3">
                    <label class="form-label">Email:</label>
                    <input type="email" class="form-control" asp-for="Email" />
                </div>

                <!-- Phone Field -->
                <div class="mt-3">
                    <label class="form-label">Phone:</label>
                    <input type="text" class="form-control" asp-for="Phone" />
                </div>

                <!-- Action Buttons (Save and Delete) -->
                <div class="mt-3">
                    <button type="submit" class="btn-modern">Save</button>
                    <button type="submit" class="btn-danger ms-3" asp-action="Delete" asp-controller="Users">Delete</button>
                </div>
            </form>
        }
    </div>
</body>
